@{
}
@model Books

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h3>
            @Model.Title  <span class="badge badge-pill badge-primary" style="float:right">
                <small>Book Price: @Model.Price.ToString("c")</small>
            </span>
        </h3>
    </div>
    <div class="card-text p-1">
        <ul>
            <li>Author: @Model.Author</li>
            <li>Publisher: @Model.Publisher</li>
            <li>ISBN Number: @Model.Isbn</li>
            <li>Category: @Model.Category</li>
            <li>Classification: @Model.Classification</li>
            <li>Page count: @Model.PageCount</li>
        </ul>
    </div>
</div>
