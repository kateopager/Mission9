@{

}

@model IEnumerable<string>


<div class="d-grid gap-2">

    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a><br />

    @foreach (string t in Model)
    {
<div class="mt-1">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@t" asp-route-pageNum="1" class="btn @(ViewBag.SelectedCategory == t ?  "btn-primary": "btn-outline-secondary")">@t</a><br />
</div>
      }

</div>

