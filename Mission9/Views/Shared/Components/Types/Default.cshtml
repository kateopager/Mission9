@{

}

@model IEnumerable<string>
@*this default file displays the various book category columns as buttons that can be pressed to route to the correct book category results*@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
@*using this style sheet to incorporate a bootstrap feature of a description when hovering over nav bars*@

<a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-outline-secondary btn-block"
   title="Home Page Content" data-toggle="popover" data-trigger="hover" data-content="Return to the entire list of books without category filters">Home</a>
<br />

@foreach (string t in Model)
{
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@t" asp-route-pageNum="1" class="btn @(ViewBag.SelectedCategory == t ?  "btn-primary btn-block" : "btn-outline-secondary btn-block")">@t</a>
    <br />
}

<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover();
    });
</script>


